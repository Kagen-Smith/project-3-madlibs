{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist", // Output directory for compiled files
    "module": "ESNext",
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Include all TypeScript files in `src`
  "exclude": ["node_modules", "dist"] // Exclude unnecessary files
}
